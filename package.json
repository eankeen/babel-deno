{
  "name": "babel-deno",
  "private": true,
  "version": "0.0.1",
  "description": "Tools for transpiling Node APIs to their Deno counterparts",
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "run-s lint:js lint:misc",
    "lint:fix": "run-s lint:js:fix lint:misc:fix",
    "lint:js": "eslint ---ignore-pattern \"deno_node_modules/packages/*\"  .",
    "lint:js:fix": "eslint --fix --ignore-pattern \"deno_node_modules/packages/*\" --ignore-pattern \"**/build/**\" .",
    "lint:misc": "prettier --check .",
    "lint:misc:fix": "prettier --write ."
  },
  "author": "Edwin Kofler",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@types/babel-types": "^7.0.7",
    "@types/babel__core": "^7.1.7",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.6",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-plugin-toml": "^0.3.1",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  }
}
